<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jupiter"
    android:background="#8F0F0115"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-black"
        android:text="jupiter"
        android:textColor="@color/black"
        android:textSize="75dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-black"
        android:text=" Júpiter tiene una composición gaseosa en la que el hidrógeno y el helio son los componentes principales.

En su estructura interna, se especula que Júpiter contiene hidrógeno en estado líquido y un núcleo rocoso."
        android:textColor="@color/black"
        android:textSize="25dp" />

    </LinearLayout>

